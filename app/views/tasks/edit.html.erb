<h2>Please enter the new values for your task</h2>

<%=form_for(@task) do |f|%>
  <%=f.label :title%>
  <%=f.text_field :title%>
  <%=f.label :details%>
  <%=f.text_field :details%>
  <%=f.label :completed%>
  <%=f.check_box :completed%>
  <%=f.submit%>
<%end%>

<%= link_to "Go back to #{@task.title}", task_path(@task.id) %>
<%= link_to "Go back to all tasks", tasks_path %>
